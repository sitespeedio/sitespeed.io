{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["prettier"],
  "extends": "eslint:recommended",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "embeddedLanguageFormatting": "off"
      }
    ],
    "require-atomic-updates": 0,
    "no-extra-semi": 0,
    "no-mixed-spaces-and-tabs": 0
  }
}
